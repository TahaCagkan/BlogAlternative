@using BlogAlternative.EntityLayer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@await Html.PartialAsync("SliderPartial")

	<section class="main-content-w3layouts-agileits">
		<div class="container">
			<div class="row">
				<!--left-->
				<div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
					<!--//silder-->
				

					<!--//silder değişiklik var-->
					<div class="blog-girds-sec">
						<div class="row">
							@foreach (var item in Model)
						{
							
					
							<div class="col-md-6 blog-grid-top">
								<div class="b-grid-top">
									<div class="blog_info_left_grid">
										<a href="single.html">
											<img src="@item.BlogThumbnailImage" class="img-fluid" alt="">
										</a>
									</div>
									<h3>
										<a href="single.html" class="fas fa-book"> @item.BlogTitle </a>
									</h3>
									<p>@item.BlogContent.Substring(0,item.BlogContent.Substring(0,30).LastIndexOf(""))...</p>
									<a href="/Blog/BlogDetails/@item.BlogID" class="btn btn-primary read-m">Devamını Oku</a>

								</div>
								<ul class="blog-icons">
									<li>
										<a href="#">
											<i class="far fa-clock"></i> @item.BlogCreateDate</a>
									</li>
									<li class="mx-2">
										<a href="#">
											<i class="far fa-comment"></i> 0</a>
									</li>
									<li>
										<a href="#">
											<i class="fas fa-eye"></i> @item.Category.CategoryName</a>
									</li>
								</ul>
							</div>
						}
						</div>
					</div>
				</div>
				<!--//left-->
				<!--right-->
				<!--//right-->
			</div>
		</div>
	</section>
