@model BlogAlternative.EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "BlogAdd";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Yeni Blog Ekle</h1>
<br />
@using (Html.BeginForm("BlogAdd", "Blog", FormMethod.Post))
{
    @Html.Label("Blog Başlığı")
    @Html.ValidationMessageFor(x => x.BlogTitle,"", new { @class = "text-danger" })

    @Html.TextBoxFor(x => x.BlogTitle,new{@class="form-control", @placeholder="Blog başlığını giriniz"})
    <br />
    @Html.Label("Blog Görseli")
    @Html.ValidationMessageFor(x => x.BlogImage,"", new { @class = "text-danger" })
    @Html.TextBoxFor(x => x.BlogImage,new{@class="form-control",@placeholder="Blog Görselini giriniz"})
    <br />
    @Html.Label("Blog Küçük Görsel")
    @Html.TextBoxFor(x => x.BlogThumbnailImage,new{@class="form-control",@placeholder="Blog Küçük Görseli Giriniz"})
    <br />
    @Html.Label("Kategori")
    @Html.DropDownListFor(x => x.CategoryID,(List<SelectListItem>)ViewBag.categoryVal,new{@class="form-control"})
    <br />
    @Html.Label("Blog İçeriği")
    @Html.ValidationMessageFor(x => x.BlogContent,"", new { @class = "text-danger" })
    @Html.TextAreaFor(x => x.BlogContent,15,3,new{@class="form-control",@placeholder="Blog İçerik Giriniz"})
    <br />
    <button class="btn btn-info">Yazıyı Kaydet</button>
}