@using BlogAlternative.EntityLayer.Concrete
@model List<AllMessage>

@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        <h1>Gelen Kutusu</h1>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <hr />
            <table class="table table-bordered">
                <tr>
                    <th>ID</th>
                    <th>Konu</th>
                    <th>Gönderen</th>
                    <th>Tarih</th>
                    <th>Mesajı Aç</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MessageID</td>
                        <td>@item.Subject</td>
                        <td>@item.SenderUser.WriterName</td>
                        <td>@(((DateTime)item.MessageDate).ToString("dd-MM-yyyy"))</td>
                        <td><a href="/Message/MessageDetails/@item.MessageID" class="btn btn-warning">Mesajı Aç</a></td>
                    </tr>
                }
            </table>
            <br />
            <a href="/Message/MessageAdd/" class="btn btn-primary">Yeni Mesaj Oluştur</a>
        </div>
    </div>
</div>
