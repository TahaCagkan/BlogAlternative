@using BlogAlternative.EntityLayer.Concrete
@model List<Writer>

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yazar Hakkında</h4>
                <div class="d-flex mt-5 align-items-top">
                    @foreach (var item in Model)
                    {
                        <img src="~/writer/assets/images/dashboard/img_4.jpg"  style="width:20px; height:50px;" class="mw-100 w-100 rounded" alt="image">
                        <div class="mb-0 flex-grow">
                            <h5 class="mr-2 mb-2">@item.WriterMail</h5>
                            <p class="mb-0 font-weight-light">@item.WriterAbout</p>
                        </div>
                        <div class="ml-auto">
                            <i class="mdi mdi-heart-outline text-muted"></i>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>

